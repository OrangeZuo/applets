.index_body {
  height: 100vh;
  background-color: #e6e6e6;
}

.banner {
  width: 100vw;
  height: 400rpx;
}

.banner image {
  width: 100vw;
  height: 400rpx;
}

.title {
  height: 40px;
  line-height: 40px;
  color: #333;
  font-size: 16px;
  font-weight: bold;
  text-indent: 12px;
  background: #fff;
}

.icon {
  margin: 10px 12px 0 12px;
  width: 20px;
  height: 20px;
  float: left;
}

.content {
  margin-top: 1px;
  height: 40px;
  line-height: 40px;
  color: #333;
  font-size: 14px;
  background: #fff;
}

.service {
  margin-top: 5px;
}

.service_content {
  background: #fff;
  height: 80px;
  width: 100wv;
  margin-top: 1px;
}

.service_Piece{
  width: 33.33%;
  height: 40px;
  line-height: 40px;
  color: #333;
  font-size: 14px;
  background: #fff;
  float: left;
}
 .service_icon {
  margin: 5px 12px 0 12px;
  width: 30px;
  height: 30px;
  float: left;
} 
